{
  "name": "mediaportal",
  "description": "Portal for media",
  "author": "desko27",
  "version": "2.6.0",
  "private": true,
  "scripts": {
    "react-start": "vite",
    "react-build": "vite build",
    "electron-start": "electron . --allow-file-access-from-files",
    "electron-build": "electron-builder --mac --win",
    "build": "npm run react-build && npm run electron-build",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"npm run wait-on-react && npm run electron-start\"",
    "wait-on-react": "wait-on -c wait-on.config.json http-get://localhost:3000",
    "lint": "npx standard",
    "bump": "npm version minor -m \"Bump version: %s\"",
    "bump:patch": "npm version patch -m \"Bump version: %s\"",
    "phoenix": "rm -rf ./node_modules && npm install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "build": {
    "mac": {
      "icon": "./build/icon.icns",
      "target": "dmg"
    },
    "win": {
      "icon": "./build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "files": [
      "build/**/*",
      "public/**/*"
    ]
  },
  "dependencies": {
    "classnames": "2.3.1",
    "cross-env": "7.0.3",
    "electron-is-dev": "2.0.0",
    "electron-log": "4.4.1",
    "react": "17.0.2",
    "react-beautiful-dnd": "13.1.0",
    "react-dom": "17.0.2",
    "react-dropzone": "11.4.0",
    "react-intl": "5.20.10",
    "react-router-dom": "5.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "1.0.2",
    "concurrently": "6.2.1",
    "electron": "15.1.0",
    "electron-builder": "22.11.7",
    "husky": "4.3.8",
    "standard": "16.0.3",
    "vite": "2.6.5",
    "vite-plugin-svgr": "0.4.0",
    "wait-on": "6.0.0"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "engines": {
    "node": "16",
    "npm": ">=7"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
