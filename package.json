{
  "name": "mediaportal",
  "description": "Portal for media",
  "author": "desko27",
  "version": "2.6.2",
  "private": true,
  "main": "src/main/index.js",
  "scripts": {
    "react-start": "vite",
    "react-build": "vite build",
    "electron-start": "electron . --allow-file-access-from-files",
    "electron-build": "electron-builder --mac --win",
    "build": "npm run react-build && npm run electron-build",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"npm run wait-on-react && npm run electron-start\"",
    "wait-on-react": "wait-on -c wait-on.config.json http-get://localhost:3000",
    "lint": "npx standard",
    "bump": "npm version minor -m \"Bump version: %s\"",
    "bump:patch": "npm version patch -m \"Bump version: %s\"",
    "phoenix": "rm -rf ./node_modules && npm install",
    "prepare": "husky install"
  },
  "build": {
    "mac": {
      "icon": "./build/icon.icns",
      "target": "dmg"
    },
    "win": {
      "icon": "./build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "files": [
      "build/**/*",
      "public/**/*"
    ]
  },
  "dependencies": {
    "clsx": "1.1.1",
    "cross-env": "7.0.3",
    "electron-is-dev": "2.0.0",
    "electron-log": "4.4.6",
    "react": "18.0.0",
    "react-beautiful-dnd": "13.1.0",
    "react-dom": "18.0.0",
    "react-dropzone": "12.0.5",
    "react-intl": "5.20.10",
    "react-router-dom": "6.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "1.3.0",
    "concurrently": "7.1.0",
    "electron": "18.0.3",
    "electron-builder": "23.0.3",
    "husky": "7.0.4",
    "standard": "16.0.4",
    "vite": "2.9.1",
    "vite-plugin-svgr": "1.1.0",
    "wait-on": "6.0.1"
  },
  "engines": {
    "node": "16",
    "npm": ">=7"
  }
}
